@model Pine.Data.Entities.Chat

<div>
    <div>
        <a type="submit" asp-area="" asp-controller="Chat" asp-action="chat" asp-route-chatId="@Model.id" style="font-size: 32px;">@Html.DisplayFor(model => model.name)</a> 
        
        
            <form method="get" asp-controller="Chat" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="name" class="form-control" />
                </div>       
            </form>
        
    </div>
</div>