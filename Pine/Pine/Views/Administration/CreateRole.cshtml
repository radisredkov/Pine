@model Pine.Models.Administration.CreateRoleViewModel

@{
    ViewData["Title"] = "Create a post";
}
<h1 style="color: #00ff21;">Make a post</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Administration" asp-action="CreateRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="roleName" class="control-label">Title</label>
                <input asp-for="roleName" class="titleInput" />
                <span asp-validation-for="roleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
